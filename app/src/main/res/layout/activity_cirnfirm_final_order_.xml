<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CirnfirmFinalOrder_Activity">

    <TextView
        android:id="@+id/ship_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/ship_text"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="@string/ship_text" />

    <EditText
        android:id="@+id/shipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="551dp"
        android:ems="10"
        android:hint="Your Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/shipment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="404dp"
        android:ems="10"
        android:hint="Your Phone Number"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/shipment_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="349dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="337dp"
        android:ems="10"
        android:hint="Your City"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/shipment_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="478dp"
        android:ems="10"
        android:hint="Your Address"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/conferm_btn"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="246dp"
        android:layout_marginBottom="251dp"
        android:background="@drawable/button_style"
        android:text="Confirm" />


</RelativeLayout>