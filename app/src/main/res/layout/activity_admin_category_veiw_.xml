<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartFragment$Admin_category_veiw_Activity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/Liner1"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/shirt"
            android:layout_width="124dp"
            android:layout_height="85dp"
            android:src="@drawable/shirt" />

        <ImageView
            android:id="@+id/frock"
            android:layout_width="99dp"
            android:layout_height="85dp"
            android:src="@drawable/frock" />

        <ImageView
            android:id="@+id/mphone"
            android:layout_width="96dp"
            android:layout_height="77dp"
            android:src="@drawable/mphone" />

        <ImageView
            android:id="@+id/men_shoe"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/shoes" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Liner2"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_below="@+id/Liner1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/women_shoe"
            android:layout_width="99dp"
            android:layout_height="85dp"
            android:src="@drawable/women_shoe" />

        <ImageView
            android:id="@+id/ring"
            android:layout_width="92dp"
            android:layout_height="65dp"
            android:src="@drawable/ring" />

        <ImageView
            android:id="@+id/laptop"
            android:layout_width="127dp"
            android:layout_height="73dp"
            android:src="@drawable/laptop" />

        <ImageView
            android:id="@+id/bag"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/bag" />
    </LinearLayout>


    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Liner2"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_style"
        android:padding="17dp"
        android:text="Maintain Products"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="159dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="165dp"
        android:background="@drawable/button_style"
        android:padding="17dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />


</RelativeLayout>




    


